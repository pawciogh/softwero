<h1 class="is-size-3 mb-5">Quiz new</h1>

<%= form_tag quiz_path, data: { turbo: false } do  %>

  <div class="select is-multiple">
    <%= collection_select(:course, :course_id, Course.all, :id, :title, {include_hidden: false}, {multiple: true, required: true, class: 'multiple'}) %>
  </div>
<!-- 
  <input type="checkbox" name="levels[]" value="0"/> Level 0<br/>
  <input type="checkbox" name="levels[]" value="1"/> Level 1<br/>
  <input type="checkbox" name="levels[]" value="2"/> Level 2<br/>
  <input type="checkbox" name="levels[]" value="3"/> Level 3<br/>
  <input type="checkbox" name="levels[]" value="4"/> Level 4<br/>
-->

<h5 class="is-size-4 my-5">Additional options</h5>
<p>How many questions?</p>
  <div class="select is-info">
    <select name="questions">
      <option value="5" selected="selected">5</option>
      <option value="10">10</option>
      <option value="15">15</option>
      <option value="20">20</option>
      <option value="25">25</option>
    </select>
  </div>
  
<div class="mt-5">
  <label class="checkbox">
  <%= check_box_tag 'random', 'true', true %>
   Random?
  </label>
   </div>

  <%= submit_tag "Start", class: 'button is-link my-5' %>
<% end %>


